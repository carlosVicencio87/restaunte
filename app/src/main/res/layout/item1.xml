<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/caja_lista_pedidos_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mesa;"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mesa"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comanda;"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/comanda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comanda"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="precio;"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="precio"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha de ingreso;"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/fecha_ingreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha ingreso"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/caja_mecero_asignado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/mecero_asignado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mecero asignado"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/fecha_entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha entrega"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/fecha_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha final"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/caja_decisiones"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/aceptar_pedido"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="aceptar pedido"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/borde"
                android:layout_margin="15dp"
                />
            <TextView
                android:id="@+id/rechazar_pedido"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="rechazar pedido"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/borde"
                android:layout_margin="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/caja_preparando"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/preparando"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="preparando..."
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/borde"
                android:layout_margin="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/caja_terminar_pedido"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/archivar_pedido"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="archivar"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/borde"
                android:layout_margin="15dp"
                />

        </LinearLayout>



    </LinearLayout>





</LinearLayout>